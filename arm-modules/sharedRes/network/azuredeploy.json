{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "dataProduct": {
            "type": "string",
            "metadata": {
                "description": "Use Case name"
            }
        },
        "environment": {
            "type": "string",
            "defaultValue": "devtest",
            "metadata": {
                "description": "Location for all services"
            }
        },
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
                "description": "Location for all resources."
            }
        },
        "resourceTags": {
            "type": "object"
        },
        "addressPrefix": {
            "type": "string",
            "metadata": {
                "description": "Vnet CIDR"
            }
        },
        "countryCode": {
            "type": "string",
            "defaultValue": "cs",
            "metadata": {
                "description": "country code"
            }
        },
         "rtDeployment": {
            "type": "bool",
            "defaultValue": true,
            "metadata": {
                "description": "Decides to deploy or not to deploy a route table"
            }
        },
            "nextHopType": {
            "type": "string",
            "defaultValue": "VirtualAppliance",
            "allowedValues": [
                "VirtualNetworkGateway",
                "VnetLocal",
                "Internet",
                "VirtualAppliance"
            ],
            "metadata": {
                "description": "The type of Azure hop the packet should be sent to"
            }
        },
        "nextHopIpAdress": {
            "type": "string",
            "metadata": {
                "description": "The IP address packets should be forwarded to. Next hop values are only allowed in routes where the next hop type is VirtualAppliance."
            }
        }
    },
    "functions": [],
    "variables": {
        "networkSecurityGroupName": "[toLower(concat(parameters('countryCode'),'-',parameters('dataProduct'),'-',parameters('environment'),'-nsg'))]",
        "snetName": "[concat(parameters('dataProduct'),'-',parameters('environment'),'-snet')]",
        "subnetCidrPositionLogic": "[string(add(int(substring(parameters('addressPrefix'),add(add(indexOf(parameters('addressPrefix'),'.'),1),add(indexOf(parameters('addressPrefix'),'.'),2)),sub(length(parameters('addressPrefix')),add(indexOf(parameters('addressPrefix'),'/'),1)))),2))]",
        "subnetPrefix": "[if(equals(parameters('environment'),'dt'),replace(parameters('addressPrefix'),'/23','/24'),concat('10.249.',variables('subnetCidrPositionLogic'),'.0/24'))]",
        "vnetName": "[concat(parameters('dataProduct'),'-sh-','vnet')]",
        "nsgId": "[resourceId('Microsoft.Network/networkSecurityGroups', variables('networkSecurityGroupName'))]",
        "rtId": "[resourceId('Microsoft.Network/routeTables',variables('routeTableName'))]",
        "routeTableName": "[concat('cs-',parameters('dataProduct'),'-',parameters('environment'),'-rt')]",
        "serviceEndpointsAll": [
            {
                "service": "Microsoft.Storage"
            },
            {
                "service": "Microsoft.KeyVault"
            }
        ],
        "onlyNsg": {
            "addressPrefix": "[variables('subnetPrefix')]",
            "networkSecurityGroup": {
                "id": "[variables('nsgId')]"
            },
            "serviceEndpoints": "[variables('serviceEndpointsAll')]"
        },
        "withRt": {
            "addressPrefix": "[variables('subnetPrefix')]",
            "networkSecurityGroup": {
                "id": "[variables('nsgId')]"
            },
            "routeTable": {
                "id": "[variables('rtId')]"
            },
            "serviceEndpoints": "[variables('serviceEndpointsAll')]"
        }

    },
    "resources": [
          {
            "condition": "[parameters('rtDeployment')]",
            "name": "[variables('routeTableName')]",
            "type": "Microsoft.Network/routeTables",
            "apiVersion": "2020-11-01",
            "location": "[parameters('location')]",
            "tags": "[parameters('resourceTags')]",
            "properties": {
                "routes": [
                    {
                        "name": "default",
                        "properties": {
                            "addressPrefix": "0.0.0.0/0",
                            "nextHopType": "[parameters('nextHopType')]",
                            "nextHopIpAddress": "[if(equals(parameters('nextHopType'),'VirtualAppliance'),parameters('nextHopIpAdress'),json('null'))]"
                        }
                    }
                ],
                "disableBgpRoutePropagation": true
            }
        },
        {
            "type": "Microsoft.Network/networkSecurityGroups",
            "apiVersion": "2019-09-01",
            "name": "[variables('networkSecurityGroupName')]",
            "tags": "[parameters('resourceTags')]",
            "location": "[parameters('location')]",
            "properties": {
                "securityRules": [
                    {
                        "name": "default-allow-rdp",
                        "properties": {
                            "priority": 1000,
                            "sourceAddressPrefix": "*",
                            "protocol": "Tcp",
                            "destinationPortRange": "3389",
                            "access": "Allow",
                            "direction": "Inbound",
                            "sourcePortRange": "*",
                            "destinationAddressPrefix": "*"
                        }
                    }
                ]
            }
        },
        {
            "type": "Microsoft.Network/virtualNetworks",
            "apiVersion": "2019-09-01",
            "name": "[variables('vnetName')]",
            "tags": "[parameters('resourceTags')]",
            "location": "[parameters('location')]",
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "[parameters('addressPrefix')]"
                    ]
                },
                "subnets": [
                    {
                        "name": "[variables('snetName')]",
                        "properties": "[if(parameters('rtDeployment'), variables('withRt'), variables('onlyNsg'))]"
                    }
                ]
            },
            "dependsOn": [
                "[resourceId('Microsoft.Network/networkSecurityGroups', variables('networkSecurityGroupName'))]",
                "[resourceId('Microsoft.Network/routeTables', variables('routeTableName'))]"
            ]
        }
    ],
    "outputs": {}
}